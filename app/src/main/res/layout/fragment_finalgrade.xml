<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_refresh_grade"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:id="@+id/scroll_grade">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_margin_padding_medium"
                android:id="@+id/finalgrade_table_grades">

            </TableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/common_margin_padding_medium"
                style="@style/DividerStyle" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_margin_padding_medium"
                android:id="@+id/table_summary">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:padding="@dimen/common_margin_padding_medium"
                        android:text="@string/label_current_term"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:padding="@dimen/common_margin_padding_medium"
                        android:id="@+id/text_current_term"
                        android:gravity="center"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:padding="@dimen/common_margin_padding_medium"
                        android:text="@string/label_cumulative"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:padding="@dimen/common_margin_padding_medium"
                        android:id="@+id/text_cumulative"
                        android:gravity="center"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:padding="@dimen/common_margin_padding_medium"
                        android:text="@string/label_transfer"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:padding="@dimen/common_margin_padding_medium"
                        android:id="@+id/text_transfer"
                        android:gravity="center"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:padding="@dimen/common_margin_padding_medium"
                        android:text="@string/label_overall"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:padding="@dimen/common_margin_padding_medium"
                        android:id="@+id/text_overall"
                        android:gravity="center"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </ScrollView>


</android.support.v4.widget.SwipeRefreshLayout>