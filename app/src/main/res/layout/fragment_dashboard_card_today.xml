<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_cardbalance"
    android:layout_marginBottom="@dimen/common_margin_padding_medium">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_cardbalance"
            android:padding="@dimen/common_margin_padding_medium"
            style="@style/TextViewCardTitleStyle"/>
        <include layout="@layout/divider" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/common_margin_padding_medium"
                android:layout_gravity="center_horizontal"
                android:text="Meal plan"
                android:id="@+id/text_meal_plan" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/common_margin_padding_medium"
                android:id="@+id/table_cardbalance">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.40"
                        android:text="@string/label_account"

                        style="@style/TextViewLabelStyle"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.30"
                        android:text="@string/label_balance"

                        style="@style/TextViewLabelStyle"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.30"
                        android:text="@string/label_last_used"

                        style="@style/TextViewLabelStyle"
                        android:gravity="center_horizontal"/>
                </TableRow>


            </TableLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

