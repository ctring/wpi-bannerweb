<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
             android:orientation="vertical"
             android:background="@color/background_color">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CS 101 - Intro to Computer Science"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:padding="@dimen/common_margin_padding_medium"
        android:background="@color/accent_color"
        android:id="@+id/text_class_name"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/common_margin_padding_medium">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_instructor"
            style="@style/TextViewLabelStyle"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_marginBottom="@dimen/common_margin_padding_small"
            android:layout_gravity="fill"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuong Nguyen"
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/text_instructor"
            android:layout_gravity="fill"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_section"
            style="@style/TextViewLabelStyle"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginBottom="@dimen/common_margin_padding_small"
            android:layout_gravity="fill"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A01"
            android:layout_row="1"
            android:layout_column="1"
            android:id="@+id/text_section"
            android:layout_marginLeft="30dp"
            android:layout_gravity="fill"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_crn"
            style="@style/TextViewLabelStyle"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_marginTop="@dimen/common_margin_padding_medium"
            android:layout_marginBottom="@dimen/common_margin_padding_small"
            android:layout_gravity="fill"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456"
            android:layout_row="3"
            android:layout_column="0"
            android:id="@+id/text_crn"
            android:layout_gravity="fill"/>
    </GridLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        style="@style/DividerStyle"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/common_margin_padding_medium"
            android:paddingRight="@dimen/common_margin_padding_medium"
            android:paddingTop="@dimen/common_margin_padding_medium"
            android:background="@color/background_color"
            android:id="@+id/list_schedule">

        </LinearLayout>
    </ScrollView>
</LinearLayout>