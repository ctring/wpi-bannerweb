<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/common_margin_padding_medium">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Lecture"
        android:paddingBottom="@dimen/common_margin_padding_large"
        style="@style/TextViewLabelStyle"
        android:id="@+id/text_type"/>
    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:src="@drawable/ic_alarm_black_18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_margin_padding_large"
            android:layout_row="0"
            android:layout_column="1"
            android:id="@+id/text_time"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_margin_padding_large"
            android:layout_row="1"
            android:layout_column="1"
            android:id="@+id/text_days"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_rowSpan="2"
            android:src="@drawable/ic_place_black_18dp"
            android:layout_marginTop="@dimen/common_margin_padding_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_margin_padding_large"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginTop="@dimen/common_margin_padding_medium"
            android:id="@+id/text_location"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_rowSpan="2"
            android:src="@drawable/ic_person_black_18dp"
            android:layout_marginTop="@dimen/common_margin_padding_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_margin_padding_large"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginTop="@dimen/common_margin_padding_medium"
            android:id="@+id/text_instructor"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_rowSpan="2"
            android:src="@drawable/ic_event_black_18dp"
            android:layout_marginTop="@dimen/common_margin_padding_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_margin_padding_large"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginTop="@dimen/common_margin_padding_medium"
            android:id="@+id/text_date_range"/>
    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/common_margin_padding_medium"
        style="@style/DividerStyle"/>
</LinearLayout>