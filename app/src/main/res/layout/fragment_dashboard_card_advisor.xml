<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_advisor"
    android:layout_marginBottom="@dimen/common_margin_padding_medium">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_advisor"
            android:padding="@dimen/common_margin_padding_medium"
            style="@style/TextViewCardTitleStyle"/>
        <include layout="@layout/divider" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/common_margin_padding_medium"
                android:paddingLeft="@dimen/common_margin_padding_medium"
                android:paddingEnd="@dimen/common_margin_padding_medium"
                android:paddingRight="@dimen/common_margin_padding_medium"
                android:paddingBottom="@dimen/common_margin_padding_medium"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_advisor"
                    android:id="@+id/textView"
                    style="@style/TextViewLabelStyle"
                    android:layout_marginTop="11dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_advisor"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_email"
                    style="@style/TextViewLabelStyle"
                    android:layout_marginTop="11dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_email"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_department"
                    style="@style/TextViewLabelStyle"
                    android:layout_marginTop="11dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_department"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_office"
                    style="@style/TextViewLabelStyle"
                    android:layout_marginTop="11dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_office"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                style="@style/DividerStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/advisor_2"
                android:paddingStart="@dimen/common_margin_padding_medium"
                android:paddingLeft="@dimen/common_margin_padding_medium"
                android:paddingEnd="@dimen/common_margin_padding_medium"
                android:paddingRight="@dimen/common_margin_padding_medium"
                android:paddingBottom="@dimen/common_margin_padding_medium"
                android:visibility="gone"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_advisor_2"
                    style="@style/TextViewLabelStyle"
                    android:layout_marginTop="11dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_advisor_2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_email"
                    style="@style/TextViewLabelStyle"
                    android:layout_marginTop="11dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_email_2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_department"
                    style="@style/TextViewLabelStyle"
                    android:layout_marginTop="11dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_department_2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_office"
                    style="@style/TextViewLabelStyle"
                    android:layout_marginTop="11dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_office_2"
                    />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
